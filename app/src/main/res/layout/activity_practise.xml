<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/details_top_bar_layout"></include>

    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:id="@+id/tab_practise_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_white"
        app:tabIndicatorColor="@color/mask_tags_2"
        app:tabSelectedTextColor="@color/mask_tags_2"
        app:tabTextColor="@color/color_black"
        app:tabIndicatorHeight="4dp"


        />

    <android.support.v4.view.ViewPager
        android:id="@+id/practise_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_white"/>
</LinearLayout>
