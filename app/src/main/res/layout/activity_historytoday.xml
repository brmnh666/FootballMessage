<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    >
   <include layout="@layout/details_top_bar_layout">

   </include>

    <FrameLayout

        android:id="@+id/histroytoday_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >
    <include layout="@layout/histroytodat_empty"></include>
    </FrameLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/mask_tags_2"
        >


        <TextView
            android:id="@+id/tv_today"
            android:textSize="20sp"
             android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2018-10-9"
            />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_historytoday_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
