<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cv_clothes"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clothes_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/clothes_brand_adidas"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_adidas"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/clothes_brand_Nike"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_nike"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/clothes_brand_Puma"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_puma"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/clothes_brand_New_balance"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_new_balance"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/clothes_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="2017-18AC米兰主场"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

