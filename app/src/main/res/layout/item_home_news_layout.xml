<?xml version="1.0" encoding="utf-8"?>
<!--
新闻页面item
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/item_news_img"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >


        <TextView
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/item_news_title"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textColor="@color/color_black"
            android:text="早报：神灯照耀老特拉福德"/>

        <TextView
            android:id="@+id/item_news_content"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="兰帕德率领的德比郡在联赛杯第三轮淘汰了穆里尼奥的曼联。兰帕德率领的德比郡在联赛杯第三轮淘汰了穆里尼奥的曼联兰帕德率领的德比郡在联赛杯第三轮淘汰了穆里尼奥的曼联"
            android:textColor="@color/mask_tags_14" />

        <TextView
            android:id="@+id/item_news_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-09-26 07:00:12"
            android:textColor="@color/mask_tags_14" />

    </LinearLayout>

</LinearLayout>
