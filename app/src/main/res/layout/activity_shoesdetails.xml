<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/details_top_bar_layout">

    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <banner.CustomBanner
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shoes_detail_custombanner"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:indicatorStyle="ORDINARY"
        app:indicatorGravity="CENTER"
        app:indicatorSelectRes="@drawable/shape_point_select"
        app:indicatorUnSelectRes="@drawable/shape_point_unselect"
        app:indicatorInterval="5dp">

    </banner.CustomBanner>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/shoes_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Puma Future 2.1"
        android:layout_gravity="center"
        />
    <!--品牌-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    >
    <TextView
        android:textColor="@color/color_black"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="品牌："
        />
    <TextView
        android:id="@+id/shoes_detail_brand"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="adidas"
        />
</LinearLayout>
    <!--品牌-->

    <!--子系-->
    <LinearLayout
        android:textColor="@color/color_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="子系："
            />
        <TextView
            android:id="@+id/shoes_detail_children"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Future 2"
            />
    </LinearLayout>
    <!--子系-->

    <!--材质-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="材质："
            />
        <TextView
            android:id="@+id/shoes_detail_texture"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="织物 超纤维"
            />
    </LinearLayout>
    <!--材质-->

    <!--场地-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="场地："
            />
        <TextView
            android:id="@+id/shoes_detail_place"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="SG"
            />
    </LinearLayout>
    <!--场地-->


    <!--颜色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="颜色："
            />
        <TextView
            android:id="@+id/shoes_detail_color"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="银/暗蓝"
            />
    </LinearLayout>

    <!--颜色-->

    <!--产地-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="产地："
            />
        <TextView
            android:id="@+id/shoes_detail_yieldly"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="越南"
            />
    </LinearLayout>
    <!--产地-->

    <!--级别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="级别："
            />
        <TextView
            android:id="@+id/shoes_detail_level"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="顶级"
            />
    </LinearLayout>
    <!--级别-->

    <!--类型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="类型："
            />
        <TextView
            android:id="@+id/shoes_detail_type"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="控制型 速度型"
            />
    </LinearLayout>
    <!--类型-->

    <!--重量-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="重量："
            />
        <TextView
            android:id="@+id/shoes_detail_weight"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="不详"
            />
    </LinearLayout>
    <!--重量-->

    <!--货号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="货号："
            />
        <TextView
            android:id="@+id/shoes_detail_NO"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="104813-02"
            />
    </LinearLayout>
    <!--货号-->



    <!--价格-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:textColor="@color/color_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="价格(¥)："
            />
        <TextView
            android:id="@+id/shoes_detail_price"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1899"
            />
    </LinearLayout>
    <!--价格-->

             <android.support.v7.widget.CardView

                 tools:targetApi="lollipop"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:clickable="true"
                 android:foreground="?android:attr/selectableItemBackground"
                 android:id="@+id/cv_shoes_collection"
                 app:cardCornerRadius="10dp"
                 app:cardUseCompatPadding="true"
                 app:cardPreventCornerOverlap="false"
                 app:cardElevation="10dp"


                 >

                <TextView
                    android:id="@+id/tv_shoes_collection"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_black"
                    android:textSize="20sp"
                    android:text="收藏"

                    />


             </android.support.v7.widget.CardView>

             <!--注-->
             <TextView
                 android:layout_marginTop="20dp"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="***感谢偶偶足球装备网提供数据支持***"
                 android:textColor="@color/mask_tags_17"
                 />
             <!--注-->
        </LinearLayout>
    </ScrollView>
    </LinearLayout>



